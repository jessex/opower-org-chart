<h1>Listing engineers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Team</th>
    <th>Location</th>
    <th>About</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @engineers.each do |engineer| %>
  <tr>
    <td><%= engineer.name %></td>
    <td><%= engineer.team %></td>
    <td><%= engineer.location %></td>
    <td><%= engineer.about %></td>
    <td><%= link_to 'Show', engineer %></td>
    <td><%= link_to 'Edit', edit_engineer_path(engineer) %></td>
    <td><%= link_to 'Destroy', engineer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Engineer', new_engineer_path, :class => "button" %>
